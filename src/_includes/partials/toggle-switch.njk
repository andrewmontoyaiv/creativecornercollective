<div 
  x-data="{
    selected: window.location.pathname.includes('/afters') ? 'afterdark' : 'creative'
  }"
  class="flex rounded-xl overflow-hidden border-2 w-full"
  :class="selected === 'creative' 
    ? 'border-blue-400' 
    : 'border-yellow-300'"
>
  <!-- Creative Corner Button -->
  <a 
    href="/"
    class="flex-1 text-center px-4 py-2 font-caveat text tracking-wide"
    :class="selected === 'creative' 
      ? 'bg-blue-400 text-white' 
      : 'bg-transparent text-yellow-400 border-r border-yellow-400'"
  >
    Creative Corner
  </a>

  <!-- After Dark Button -->
  <a 
    href="/afters/"
    class="flex-1 text-center px-4 py-2 font-caveat text tracking-wide"
    :class="selected === 'afterdark' 
      ? 'bg-yellow-300 text-black' 
      : 'bg-white text-blue-400 border-l border-blue-400'"
  >
    After Dark
  </a>
</div>